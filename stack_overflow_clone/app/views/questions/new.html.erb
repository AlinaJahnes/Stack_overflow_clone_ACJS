<div class='question-form'>
  <%= form_for @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 10, cols: 80 %>
  </div>
  <div>
    <%= label_tag :tags %>
    <%= text_field_tag :tags %>
  </div>
   <div>
    <%= f.submit 'Submit' %>
  </div>
  <% end %>
</div>


