<h1>Questions</h1>
<% @questions.each do |question| %>
  <div class='question'>
    <div class='question-stats'>
      <div class='count-box'>
        <!-- <p class='count'>vote count</p> -->
        <p class='count-title'><%= question.vote_count%> votes</p>
      </div>
      <div class='count-box'>
        <p class='count'> <%= question.answers.count %> </p>
        <p class='count-title'>answers</p>
      </div>
    <div>
      <h3>
        <%= link_to question.title, question_path(question) %>
      </h3>
      <% question.tags.each do |tag| %>
      <div class='tags'>
        <%= button_to tag.name, tag_path(tag), method: :get %>
      </div>
      <% end %>
    </div>
    <div class='question-footer'>
      <p class='elapsed'> answered time ago </p>
      <p class='question-author'> <%= question.user.username %> </p>
    </div>
    </div>
  </div>
<% end %>
<div class='quesiont-footer'>Looking for more? Go to the real <a href="https://www.stackoverflow.com">Stack Overflow</a></div>
